.commentable {

    .media {

        margin-top: 10px;
        padding: 3px;
        border: 1px solid silver + 50%;
        border-radius: 3px;

        box-shadow: 0 1px 4px rgba(0,0,0,0.1);

        p:last-child {
            margin-bottom: 0;
        }

        .about {
            font-size: 12px;
            height: 18px;
        }

        span.time {
            padding-left: 5px;
        }

    }

}