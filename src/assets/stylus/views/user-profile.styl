h1-font-size = 30px;

#user-profile {

    .user-avatar {
        float: right;
        padding-right: 20px;
        padding-top: 20px;
    }

    .jumbotron {
        padding-top: 1px;
        padding-left: 20px;

        h1 {
            font-size: h1-font-size;
        }

        h2 {
            font-size: h1-font-size - 6px;
        }

        h3, h4, h5, h6 {
            font-size: h1-font-size - 10px;
        }
    }

}