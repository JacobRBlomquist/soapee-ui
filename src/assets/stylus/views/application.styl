#application {

    button.btn-xxs {
        padding: 1px 5px;
        font-size: 10px;
    }

    input.short-numeric {
        height: 25px;
        width: 60px;
    }

    table.table-super-condensed {
        td {
            padding-top: 2px;
            padding-bottom: 2px;
        }
    }

    .t-table {
        display: table;
    }

    .t-cell {
        display: table-cell;
    }

    .t-row {
        display: table-row;
    }

    .truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .no-select {
        -webkit-user-select: none;
        -moz-user-select: none;
        -khtml-user-select: none;
        -ms-user-select: none;
    }

    .panel-info > .panel-heading {
        background-color: #3434F5;
    }

    .panel-success > .panel-heading {
        background-color: #00BD6C;
    }

    .alert {
        padding: 2px 10px;
        margin: 0 15px 15px 15px;
    }

    .alert-warning {
        background-color: #f28700;
    }

}