#application {

    button.btn-xxs {
        padding: 1px 3px;
        font-size: 10px;
    }

    input.short-numeric {
        height: 25px;
        width: 60px;
    }

    .t-table {
        display: table;
    }

    .t-cell {
        display: table-cell;
    }

    .t-row {
        display: table-row;
    }

    .truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .no-select {
        -webkit-user-select: none;
        -moz-user-select: none;
        -khtml-user-select: none;
        -ms-user-select: none;
    }


}