fast-transition-speed=0.2s;
very-fast-transition-speed=0.1s;

.fade {

    &-enter {
        opacity: 0;
        transition: opacity fast-transition-speed ease-in;

        &-active {
            opacity: 1;
        }
    }


    &-leave {
        opacity: 1;
        transition: opacity very-fast-transition-speed ease-in;

        &-active {
            opacity: 0;
        }
    }


}